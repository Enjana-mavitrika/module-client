@model ModuleClient.Models.Client

@{
    Layout = null;
}

<!--
    Auteur: S.RABONARIJAONA
-->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/lib/bootstrap-4.0.0/bootstrap.min.css")
    @Styles.Render("~/Content/lib/fontawesome-5.13.0/fontawesome.min.css")
    @Styles.Render("~/Content/lib/fontawesome-5.13.0/solid.min.css")
    @Styles.Render("~/Content/lib/loadSpinner/loadspinner.css")
    @Styles.Render("~/Content/lib/jodit-3.3.24/jodit.min.css")
    @Styles.Render("~/Content/Client/custom.css")
</head>

<body>

    <nav class="navbar navbar-light bg-light justify-content-between">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Client</a></li>
                <li class="breadcrumb-item active" aria-current="page">Détail client</li>
            </ol>
        </nav>
        <a class="navbar-brand"> @Model.Nom</a>
    </nav>

    <main class="container-fluid">
        <div class="row">
            <nav class="col-3 position-static">
                <div class="list-group">
                    <button class="list-group-item list-group-item-action active" id="btn-afficher-infos">
                        Informations générales
                    </button>
                    <button class="list-group-item list-group-item-action" id="btn-afficher-interlocuteurs">Interlocuteur</button>
                    <button class="list-group-item list-group-item-action" id="btn-afficher-commentaire">Commentaire</button>

                </div>
            </nav>


            @RenderBody()

        </div>
    </main>


    @Scripts.Render("~/Scripts/lib/fontawesome-5.13.0/fontawesome.min.js")
    @Scripts.Render("~/Scripts/lib/fontawesome-5.13.0/solid.min.js")

    @Scripts.Render("~/Scripts/lib/jodit-3.3.24/jodit.min.js")


    @Scripts.Render("~/Scripts/lib/mustache-4.0.1/mustache.min.js")
    @Scripts.Render("~/Scripts/app/client.service.js")
    @Scripts.Render("~/Scripts/app/details-client.component.js")

</body>

</html>
